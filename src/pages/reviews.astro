---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts and filter for reviews
const allPosts = await getCollection('blog');
const reviewPosts = allPosts.filter(post =>
  post.data.category === 'reviews'
).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Product Reviews" description="Honest, in-depth reviews of pet products. Tested by real pets, written by real pet parents.">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[#7C3AED] to-[#9333EA] text-white py-16 relative overflow-hidden">
    <div class="absolute top-10 right-10 opacity-20 text-8xl"><i class="fa-solid fa-star"></i></div>
    <div class="max-w-6xl mx-auto px-4 relative z-10">
      <div class="flex items-center gap-3 mb-4">
        <span class="bg-white/20 text-white text-sm font-semibold px-4 py-1 rounded-full">
          <i class="fa-solid fa-star mr-2"></i>reviews
        </span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold mb-4 font-['Fredoka'] text-white">Product Reviews</h1>
      <p class="text-xl text-purple-100 max-w-2xl">
        Honest, in-depth reviews of pet products. Tested by real pets, written by real pet parents who've been there.
      </p>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4">
      {reviewPosts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {reviewPosts.map((post) => (
            <a href={`/blog/${post.slug}`} class="bg-white rounded-2xl overflow-hidden hover:shadow-xl transition-all border border-purple-100 group">
              <div class="h-48 bg-gradient-to-br from-[#F59E0B]/10 to-[#D97706]/10 flex items-center justify-center">
                <i class="fa-solid fa-star text-6xl text-[#F59E0B]/30"></i>
              </div>
              <div class="p-6">
                <div class="flex items-center gap-3 mb-3">
                  <span class="bg-[#FEF3C7] text-[#D97706] text-xs px-3 py-1 rounded-full font-semibold capitalize">
                    {post.data.category}
                  </span>
                  <span class="text-gray-400 text-xs">
                    <i class="fa-regular fa-clock mr-1"></i>{post.data.readTime}
                  </span>
                </div>
                <h3 class="font-bold text-[#1F2937] text-lg mb-2 font-['Fredoka'] group-hover:text-[#7C3AED] transition-colors line-clamp-2">
                  {post.data.title}
                </h3>
                <p class="text-[#6B7280] text-sm mb-4 line-clamp-2">
                  {post.data.description}
                </p>
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-400">
                    {post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                  </span>
                  <span class="text-[#F59E0B] font-semibold flex items-center gap-1 group-hover:gap-2 transition-all">
                    Read More <i class="fa-solid fa-arrow-right text-xs"></i>
                  </span>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="w-24 h-24 bg-[#FEF3C7] rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="fa-solid fa-star text-4xl text-[#F59E0B]"></i>
          </div>
          <h3 class="text-2xl font-bold text-[#1F2937] mb-2 font-['Fredoka']">Coming Soon!</h3>
          <p class="text-[#6B7280] max-w-md mx-auto">
            We're working on in-depth product reviews. Check back soon!
          </p>
          <a href="/blog" class="inline-flex items-center gap-2 mt-6 text-[#7C3AED] font-semibold hover:underline">
            <i class="fa-solid fa-arrow-left"></i> Browse All Articles
          </a>
        </div>
      )}
    </div>
  </section>
</Layout>
